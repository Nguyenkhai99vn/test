<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBG"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/ETMail"
            android:gravity="center_vertical"
            android:text="Email or Phone"
            android:textStyle="italic"
            android:textSize="18dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:textColor="@color/text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/ETPass"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
    />
    <EditText
            android:id="@+id/ETPass"
            android:text="Password"
            android:textColor="@color/text"
            android:textStyle="italic"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="300dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="400px"
            android:layout_height="400px"
            app:srcCompat="@drawable/logo1"
            tools:layout_editor_absoluteY="148dp"
            android:id="@+id/imageView2"
            android:layout_marginBottom="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/ETMail"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/botton"
            android:text="Login"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="70dp"

            android:id="@+id/bottom"
            app:layout_constraintTop_toTopOf="@+id/ETPass"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/teview1"
              android:text="Sign Of For Facebook"
              android:textColor="@color/text"
              android:layout_gravity="center"
              android:layout_marginHorizontal="50dp"
              android:layout_marginTop="130dp"
              app:layout_constraintTop_toTopOf="@+id/bottom" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Forgot Password"
              android:textColor="@color/text"
              android:layout_gravity="center"
              android:layout_marginHorizontal="50dp"
              android:layout_marginTop="30dp"
              app:layout_constraintTop_toTopOf="@+id/teview1" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>